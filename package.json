{
  "name": "transit",
  "version": "1.0.0",
  "description": "Real-time GrapQL microservice framework written in Node with support for C++ and Rust",
  "main": "index.js",
  "scripts": {
    "start": "npx yarn build:tsc:dev && npx nodemon ./build/index.js",
    "start:dev": "npx cross-env NODE_ENV=development  && concurrently \"npx yarn build:tsc:dev\" \"npx nodemon ./build/index.js\"",
    "start:prod": "npx cross-env NODE_ENV=production && npx yarn build:tsc:prod && npx pm2 start ./build/index.js -i max",
    "build:tsc:dev": "rm -rf ./build && tsc -w index.ts --outDir ./build",
    "build:tsc:prod": "rm -rf ./build && tsc index.ts --outDir ./build",
    "build:node": "tar czf transit.tar.gz build package.json Dockerfile yarn.lock nginx.conf docker-compose.yaml",
    "build:protobuf": "npx protobufjs",
    "clean": "rm -rf ./build && rm -rf node_modules",
    "lint": "npx tslint --config .tsconfig.json ./src/**/*.ts{,x} --fix",
    "test": "npx jest",
    "kafka:demo": "concurrently \"npx ts-node ./src/messages/producers/index.ts\" \"npx ts-node ./src/messages/consumers/index.ts\"",
    "kill-node": "killall node",
    "docker:build": "source ./bin/docker_build.sh",
    "docker:run": "source ./bin/docker_run.sh",
    "docker:stop": "source ./bin/docker_stop.sh",
    "docker:compose": "source ./bin/docker_compose.sh",
    "kdb:start": "~/q/m64/q",
    "generate:docs": "npx jsdoc ./src/**/*.ts{,x}"
  },
  "author": "Jamal O'Garro",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^12.12.7",
    "concurrently": "5.0.0",
    "faker": "4.1.0",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "jsdoc": "3.6.3",
    "nodemon": "1.19.4",
    "prettier": "1.19.1",
    "ts-node": "8.4.1",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.2"
  },
  "dependencies": {
    "apollo-server-express": "2.9.7",
    "async": "^3.1.0",
    "axios": "0.19.0",
    "bluebird": "3.7.1",
    "body-parser": "1.19.0",
    "commander": "4.0.0",
    "cross-env": "6.0.3",
    "dotenv": "8.2.0",
    "graphql": "14.5.8",
    "graphql-tools": "4.0.6",
    "graphql-yoga": "1.18.3",
    "kafka-node": "5.0.0",
    "lodash": "4.17.15",
    "long": "4.0.0",
    "moment": "2.29.2",
    "mongoose": "^5.7.11",
    "morgan": "1.9.1",
    "nan": "2.14.0",
    "neon-cli": "0.3.3",
    "node-gyp": "6.0.1",
    "node-pagerduty": "^1.1.6",
    "node-q": "2.4.4",
    "nodemailer": "6.3.1",
    "numeral": "2.0.6",
    "papaparse": "5.1.0",
    "passport": "0.4.0",
    "pm2": "4.1.2",
    "protobufjs": "6.8.8",
    "puppeteer": "2.0.0",
    "rejoiner": "^1.2.0",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.5.1",
    "slack": "^11.0.2",
    "winston": "3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx yarn run lint",
      "pre-push": "npx yarn test"
    }
  }
}
